{{#if errorMessage}}
  <div class="alert alert-danger" role="alert">
    <h3 class="text-center fw-bold">
      {{errorMessage}}
    </h3>

  </div>

{{/if}}

<h1 class="my-5 pt-4 text-center text-danger">
  NHÂN VIÊN
</h1>

<div class="w-100 d-flex justify-content-center">
  <form
    class="mx-1 mx-md-4 pb-5 fw-bold w-50"
    action="/register/nhanvien"
    method="POST"
  >

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          placeholder="Tên tài khoản"
          required
        />
        <label class="form-label" for="name">Tên tài khoản </label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Password"
        />
        <label class="form-label" for="password">Password</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">

      <div class="form-outline flex-fill mb-0">
        <input
          type="password"
          id="password1"
          name="password1"
          class="form-control"
          placeholder="Confirm Password"
        />
        <label class="form-label" for="password1">Confirm your password</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="uname"
          name="uname"
          class="form-control"
          placeholder="Họ và tên"
          required
        />
        <label class="form-label" for="uname">Họ và tên </label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="email"
          name="email"
          class="form-control"
          placeholder="Email"
          required
        />
        <label class="form-label" for="email">Email </label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="sdt"
          name="sdt"
          class="form-control"
          placeholder="Số điện thoại"
          required
        />
        <label class="form-label" for="sdt">Số điện thoại </label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="dc"
          name="dc"
          class="form-control"
          placeholder="Địa chỉ"
          required
        />
        <label class="form-label" for="dc">Địa chỉ </label>
      </div>
    </div>

    <button type="submit" class="btn btn-success btn-lg">Register</button>

  </form>
</div>