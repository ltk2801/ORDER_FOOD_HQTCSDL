<h1 class="my-5 pt-4 text-center text-danger">
  NHÂN VIÊN
</h1>

<div class="w-100 d-flex justify-content-center">
  <form
    class="mx-1 mx-md-4 pb-5 fw-bold w-50"
    action="/register/nhanvien"
    method="POST"
  >

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          placeholder="Tên tài khoản"
          required
        />
        <label class="form-label" for="name">Tên tài khoản </label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Password"
        />
        <label class="form-label" for="password">Password</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">

      <div class="form-outline flex-fill mb-0">
        <input
          type="password"
          id="password1"
          name="password1"
          class="form-control"
          placeholder="Confirm Password"
        />
        <label class="form-label" for="password1">Confirm your password</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <div class="form-outline flex-fill mb-0">
        <input
          type="text"
          id="Uname"
          name="Uname"
          class="form-control"
          placeholder="Họ tên"
          required
        />
        <label class="form-label" for="Uname">Họ tên </label>
      </div>
    </div>

    <button type="submit" class="btn btn-success btn-lg">Register</button>

  </form>
</div>