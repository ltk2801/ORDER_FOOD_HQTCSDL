    <div class="col py-3">
      <div class="mb-5">
        <h1>Thêm cửa hàng</h1>

      </div>
      <div class="w-100 d-flex justify-content-start">
        <form
          class="mx-1 mx-md-4 pb-5 fw-bold w-50"
          action="/doitac/themcuahang"
          method="POST"
        >

          <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
              <input
                type="text"
                id="dc"
                name="dc"
                class="form-control"
                placeholder="Địa chỉ quán ăn"
              />
              <label class="form-label" for="dc">Địa chỉ quán ăn </label>
            </div>
          </div>
          <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">
              <input
                type="text"
                id="tg"
                name="tg"
                class="form-control"
                placeholder="Thời Gian Hoạt Động"
              />
              <label class="form-label" for="tg">Thời Gian Hoạt Động </label>
            </div>
          </div>

          <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-outline flex-fill mb-0">

              <select
                class="form-select"
                aria-label="Default select example"
                name="tt"
                id="tt"
              >
                <option selected>Tình trạng cửa hàng</option>
                <option value="Mở cửa">Mở cửa</option>
                <option value="Tạm nghỉ">Tạm nghỉ</option>
                <option value="Đóng cửa">Đóng cửa</option>
              </select>
              <label for="tt">Tình trạng cửa hàng :</label>
            </div>
          </div>

          <button type="submit" class="btn btn-success btn-lg">Thêm Cửa Hàng</button>

        </form>
      </div>
    </div>
