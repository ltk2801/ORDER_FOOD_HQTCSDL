            <div class="row shadow-sm p-3 mb-5 bg-body rounded">
                {{#each menus}}
                 <form action="/khachhang/addgiohang" method="POST" class="col-3 bg-light d-flex gap-2 flex-column align-items-center justify-content-center shadow p-3 m-3 bg-body rounded text-center" >
                    <img src="https://cdn.quantrinhahang.edu.vn/wp-content/uploads/2019/06/fast-food-la-gi.jpg" alt="food" class="img-fluid">
                    <h4 class="fw-bold">{{this.TenMon}}</h4>
                    <p class="fw-light">{{this.MieuTa}}</p>
                    <p>{{this.TinhTrang}}</p>
                    <p class="text-danger fw-bold">{{this.GiaThanh}} </p>
                    <div class="form-group">
                        <label for="sl">Số lượng</label>
                      <select
                class="form-select"
                aria-label="Default select example"
                name="sl"
                id="sl"
              >
                <option selected>0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
              </select>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Add to Carts</button>
                    <input type="hidden" value="{{this.MaMon}}" name="mmId" />
                    <input type="hidden" value="{{this.MaCuaHang}}" name="chId" />
                    <input type="hidden" value="{{this.MaDoiTac}}" name="dtId" />
                </form> 
                {{/each}}
            </div>
                   
          <form action="/khachhang/dsch/{{dtId}}" method="get">
             <button class="btn btn-success">Back</button>
