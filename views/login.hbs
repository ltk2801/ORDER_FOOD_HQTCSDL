<div class="my-5 text-danger">
  <h1 class="my-5 p-3 text-center">
    Login
  </h1>

  <div class="w-50 p-3 m-auto text-dark">
    <form class="mx-1 mx-md-4" action="/login" method="POST">

      <div class="d-flex flex-row align-items-center mb-4">
        <div class="form-outline flex-fill mb-0">
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            value="{{c_email}}"
            required
          />
          <label class="form-label" for="email">Tên tài khoản</label>
        </div>
      </div>

      <div class="d-flex flex-row align-items-center mb-4">
        <div class="form-outline flex-fill mb-0">
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Password"
            value="{{c_password}}"
          />
          <label class="form-label" for="password">Password</label>
        </div>
      </div>

      <div class="d-flex justify-content-start mb-5">

        <p class="me-4">Don't have account?</p><a
          href="/register"
          class="link-primary fw-bold"
          style="text-decoration: none;"
        >Register</a>
      </div>

      <div class="d-flex justify-content-start mb-lg-4">
        <button type="submit" class="btn btn-success btn-lg">Login</button>
      </div>

    </form>
  </div>
</div>